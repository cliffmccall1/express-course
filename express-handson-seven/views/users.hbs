<script>
    function onDelete() {
        $.ajax({
            url: '/users/{{UserId}}/delete',
            method: 'DELETE', complete: () => window.location = "/"
        })
    }
</script>

<table border="1">
    <tr>
        <th>UserName</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Delete</th>
    </tr>
    {{#each users}}
    <tr>
        <td>{{Username}}</td>
        <td>{{FirstName}}</td>
        <td>{{LastName}}</td>
        <td>
            <div>
                <button onclick="onDelete()" id="deleteButton">Delete User</button>
            </div>
        </td>
    </tr>
    {{/each}}
</table>